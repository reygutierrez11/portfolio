<div>
  <h1 class="font-bold text-4xl">Posts#index</h1>
  <p>Find me in app/views/posts/index.html.erb</p>
  <ul>
    <% @posts.each do |post| %>
      <li>
        <a href="<%= post_path(post)%>" >
          <%= link_to post.title, post %>
        </a>
      </li>
    <% end %>
  </ul>

  <%= link_to "New Post", new_post_path %>
</div>
